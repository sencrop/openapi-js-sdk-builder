{
  "name": "@sencrop/openapi-js-sdk-builder",
  "version": "1.1.3",
  "description": "Create a JavaScript SDK from an OpenAPI 3 definition",
  "main": "dist/index.js",
  "scripts": {
    "architecture": "jsarch 'src/**/*.js' > ARCHITECTURE.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "checkStaged": "if ! git diff-files --quiet --ignore-submodules ; then echo \"⚠️ - Unstaged files found:\"; echo $(git diff-files --shortstat); fi;",
    "cli": "env NODE_ENV=${NODE_ENV:-cli}",
    "compile": "babel src --out-dir=dist",
    "cover": "NODE_ENV=${NODE_ENV:-test} jest --coverage",
    "doc": " echo \"# API\" > API.md; jsdoc2md 'src/**/*.js' >> API.md",
    "jest": "NODE_ENV=${NODE_ENV:-test} jest",
    "lint": "eslint 'src/**/*.js'",
    "metapak": "metapak",
    "prettier": "prettier --write 'src/**/*.js'",
    "preversion": "npm run lint && npm run metapak -- -s && npm t",
    "test": "npm run jest",
    "version": "npm run changelog"
  },
  "metapak": {
    "configs": [
      "main",
      "tests",
      "readme",
      "jsarch",
      "jsdocs",
      "oss",
      "eslint"
    ],
    "data": {
      "files": "'src/**/*.js'",
      "eslintConfigType": "backend",
      "testFiles": "'src/**/*.test.js'",
      "ignore": [
        "dist"
      ],
      "jestRoots": [
        "<rootDir>/src",
        "<rootDir>/test"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sencrop/openapi-js-sdk-builder.git"
  },
  "keywords": [
    "openapi",
    "sdk",
    "js"
  ],
  "author": "Nicolas Froidure (Sencrop)",
  "license": "MIT",
  "dependencies": {
    "@whook/http-router": "4.0.0-alpha.11",
    "camel-case": "^3.0.0"
  },
  "peerDependencies": {
    "axios": "^0.19.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/commit-analyzer": "^6.1.0",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/github": "^5.2.10",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "babel-eslint": "^10.0.3",
    "conventional-changelog-cli": "^2.0.23",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "jsarch": "^2.0.3",
    "jsdoc-to-markdown": "^5.0.0",
    "lint-staged": "^9.2.5",
    "metapak": "^3.1.6",
    "metapak-sencrop": "7.5.0",
    "prettier": "^1.18.2"
  },
  "bugs": {
    "url": "https://github.com/sencrop/openapi-js-sdk-builder/issues"
  },
  "homepage": "https://github.com/sencrop/openapi-js-sdk-builder#readme",
  "engines": {
    "node": ">=10.15.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "8.12.0"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "contributors": [],
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 9
    },
    "env": {
      "es6": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "plugins": [
      "prettier",
      "import",
      "jest"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "semi": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS && npm run doc && git add API.md",
      "pre-commit": "npm t && npm run architecture && (git add ARCHITECTURE.md || exit 1) && lint-staged && npm run --silent checkStaged"
    }
  },
  "jest": {
    "coverageReporters": [
      "lcov"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "roots": [
      "<rootDir>/src",
      "<rootDir>/test"
    ]
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint",
      "jest --bail --findRelatedTests"
    ]
  },
  "release": {
    "branch": "master",
    "repositoryUrl": "git@github.com:sencrop/openapi-js-sdk-builder.git",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
